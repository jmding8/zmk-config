        jmt: j_macro_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "J_MACRO_TAP";
            #binding-cells = <2>;
            flavor = "tap-unless-interrupted";
            tapping-term-ms = <FAST_TIMEOUT>;
            bindings = <&mcj>, <&kp>;
            hold-trigger-key-positions = <42 43 64 65 66 71 72>;
        };

        // ***********************************************************************************
        // Other hold-taps
        // ***********************************************************************************

        // F-key (in system_layer): hold = flash, tap = F
        fht: f_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "F_HOLD_TAP";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <2000>;
            bindings = <&bootloader>, <&kp>;
        };
    };

    // sl stands for Sticky Layer.
    sl {
        release-after-ms = <20000>; // 20 seconds
    };

    // ***********************************************************************************
    // Combos
    // ***********************************************************************************
    combos {
        compatible = "zmk,combos";

        combo_sys {
            timeout-ms = <SLOW_TIMEOUT>;
            key-positions = <73 74 75>; /* lower right hand corner */
            bindings = <&sl SYS>;
        };
        combo_tab {
            timeout-ms = <SLOW_TIMEOUT>;
            key-positions = <19 35>; /* R G */
            bindings = <&kp TAB>;
        };
        combo_esc {
            timeout-ms = <SLOW_TIMEOUT>;
            key-positions = <34 35>; /* F G */
            bindings = <&kp ESC>;
        };
        combo_menu {
            timeout-ms = <SLOW_TIMEOUT>;
            key-positions = <26 40>; /* U H */
            bindings = <&kp K_CMENU>;
        };

        combo_rh_ret {
            // Previous timeouts:
            timeout-ms = <FAST_TIMEOUT>;
            key-positions = <58 59>; /* , . */
            bindings = <&kp RET>;
        };

        // Combos to make left-hand-only operation easier
        combo_lh_ret {
            // Previous timeouts:
            timeout-ms = <FAST_TIMEOUT>;
            key-positions = <48 49>; /* X C */
            bindings = <&kp RET>;
        };
        combo_lh_del {
